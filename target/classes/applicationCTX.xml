<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
   
   <!-- Calculator 클래스로 calculator 객체 설정 -->
   <!-- id = "지어줄 이름" class="경로.클래스이름" -->
   <!-- Calculator calculator = new Calculator(); -->
   <bean id="cal" class="com.jhjcompany.test.Calculator"></bean>
   
   
   <!-- myCalculator 클래스로 myCalculator 객체 설정 -->
   <bean id="myCalculator" class="com.jhjcompany.test.MyCalculator">
   		<property name="a" value="10"></property>
   		<property name="b" value="5"></property>
   		<property name="calculator">
   			<ref bean="cal"/>
   		</property>
   </bean>
   
</beans>